{
    "id": "faserip",
    "title": "FASERIP",
    "description": "A framework for FASERIP-based games.",
    "version": "0.1.0",
    "compatibility": {
      "minimum": 11,
      "verified": 11
    },
    "authors": [{
      "name": "Don Bisdorf",
      "url": "http://www.donbisdorf.com",
      "email": "dbisdorf@gmail.com"
    }],
    "esmodules": ["faserip.mjs"],
    "styles": ["styles/faserip-styles.css"],
    "languages": [{
      "lang": "en",
      "name": "English",
      "path": "lang/en.json"
    }],    
    "documentTypes": {
      "Actor": {
        "hero": { 
          "htmlFields": ["background.biography"],
          "filePathFields": { "background.fullPortrait": ["IMAGE"] }
         },
        "villain": { "htmlFields": ["background.biography"] }
      }
    },
    "socket": false,
    "initiative": "1d20",
    "grid": {
      "distance": 1,
      "units": "zone"
    },
    "primaryTokenAttribute": "resources.health",
    "secondaryTokenAttribute": "null",
    "url": "https://github.com/dbisdorf/foundry-faserip",
    "manifest": "https://github.com/dbisdorf/foundry-faserip/releases/latest/download/system.json",
    "download": "https://github.com/dbisdorf/foundry-faserip/releases/download/v0.1.0/foundry-faserip.zip"
  }
